<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_margin"
    card_view:cardCornerRadius="@dimen/card_view_corner_radius"
    card_view:cardElevation="5dp"
    card_view:contentPadding="@dimen/content_padding">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/js_resume_item_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="type"
            android:textSize="@dimen/resume_label_font" />


            <com.fredzqm.jobee.job_seeker.resume.NestedListView
                android:id="@+id/listviewTasks"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:cacheColorHint="#00000000" >
            </com.fredzqm.jobee.job_seeker.resume.NestedListView>

            <!--<include-->
                <!--layout="@layout/js_resume_item_content_item"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->

    </RelativeLayout>

</android.support.v7.widget.CardView>