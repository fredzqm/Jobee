<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/js_job_list_search_view"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <android.support.v7.widget.RecyclerView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/js_job_list_list"
        android:name="com.fredzqm.jobee.job_seeker.AppliedJob.AppliedJobFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/js_job_list_search_view"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.fredzqm.jobee.job_seeker.AppliedJob.AppliedJobFragment"
        tools:listitem="@layout/js_joblist_item" />

</RelativeLayout>
