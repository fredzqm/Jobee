<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_margin"
    card_view:cardCornerRadius="@dimen/card_view_corner_radius"
    card_view:cardElevation="5dp"
    card_view:contentPadding="@dimen/content_padding">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/js_list_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_margin="@dimen/detail_view_margin"
            android:layout_row="0"
            android:text="Title" />

        <TextView
            android:id="@+id/js_list_item_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/detail_view_margin"
            android:layout_row="0"
            android:text="Date" />

        <TextView
            android:id="@+id/js_list_item_company"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/detail_view_margin"
            android:layout_row="1"
            android:text="Company" />

        <TextView
            android:id="@+id/js_list_item_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/detail_view_margin"
            android:layout_row="1"
            android:text="City" />

    </GridLayout>

</android.support.v7.widget.CardView>
