<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/detail_view_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/re_job_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/detail_view_margin"
            android:text="title"
            android:textAlignment="center"
            android:textSize="@dimen/job_title_size" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/re_job_detail_title"
            android:layout_margin="@dimen/detail_view_margin"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/re_job_detail_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/detail_view_margin"
                android:layout_weight="1"
                android:text="company"
                android:textAlignment="center"
                android:textSize="@dimen/job_info_size" />

            <TextView
                android:id="@+id/re_job_detail_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/detail_view_margin"
                android:layout_weight="1"
                android:text="city"
                android:textAlignment="center"
                android:textSize="@dimen/job_info_size" />

            <TextView
                android:id="@+id/re_job_detail_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/detail_view_margin"
                android:layout_weight="1"
                android:text="Date"
                android:textAlignment="center"
                android:textSize="@dimen/job_info_size" />

        </LinearLayout>

        <EditText
            android:id="@+id/re_job_detail_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linear_layout"
            android:layout_margin="@dimen/detail_view_margin"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:text="Detail"
            android:textSize="@dimen/job_detail_size"
            android:inputType="textMultiLine"
            android:ems="10"
            />

    </LinearLayout>
</ScrollView>

